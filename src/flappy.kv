#:kivy 1.8.0

<FlappyGame>:
    canvas:
        Color:
            rgb: .98, .98, .98
        Rectangle:
            size: self.width, 10
        Rectangle:
            size: self.width, 10
            pos: 0, self.height - 10
    Label:
        pos: 10, 10
        text: 'Ta≈°kai: ' + str(root.points)

<FlappyBird>:
    size: 20, 15
    canvas.after:
        PushMatrix:
        Rotate:
            axis: 0, 0, 1
            angle: self.rotation
            origin: self.center 
        Ellipse:
            pos: self.pos
            size: 20, 15
        PopMatrix:

<FlappyColumn>:
    pos: self.pos_x, self.pos_y
    size: 30, self.col_height
    canvas:
        Rectangle:
            pos: self.pos_x, self.pos_y
            size: 30-5, self.col_height-5

       
