#:kivy 1.8.0

<FlappyGame>:
    bird: flappy_bird

    canvas:
        Color:
            rgb: .98, .98, .98
        Rectangle:
            size: self.width, 10
        Rectangle:
            size: self.width, 10
            pos: 0, self.height - 10
    Label:
        pos: 10, 10
        text: 'Ta≈°kai: ' + str(root.points) 

    FlappyBird:
        id: flappy_bird
        center: self.parent.center

<FlappyBird>:
    pos: 0, 0
    canvas: 
        Ellipse:
            pos: self.pos
            size: 20, 15

<FlappyColumn>:
    pos: 0,0



