#:kivy 1.8.0

<SillyGame>:
    canvas:
        Color:
            rgb: .98, .98, .98
        Rectangle:
            source: 'img/background.png'
            size: self.size
        Rectangle:
            size: self.width, 10
        Rectangle:
            size: self.width, 10
            pos: 0, self.height - 10

    Label:
        pos: 10, 10
        markup: True
        text: '[size=25]Ta≈°kai: ' + str(root.points) + '[/size]'

<SillyBird>:
    size: 38, 30
    canvas.after:
        PushMatrix:
        Rotate:
            axis: 0, 0, 1
            angle: self.rotation
            origin: self.center 
        Ellipse:
            source: 'img/bird.png'
            pos: self.pos
            size: 43, 30
        PopMatrix:


<SillyColumn>:
    pos: self.pos_x, self.pos_y
    size: 52, self.col_height
    canvas.before:
        Rectangle:
            source: 'img/column_up.png' if self.type == 'up' else 'img/column_down.png'
            pos: self.pos_x, self.pos_y
            size: 52, self.col_height-5

       
